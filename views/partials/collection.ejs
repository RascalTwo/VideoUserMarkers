<div class="w-full px-1 my-1 md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 xl:w-1/4">

  <article class="overflow-hidden rounded-lg shadow-lg dark:shadow-slate-600 bg-slate-200 hover:bg-slate-400 outline-1 outline-slate-400 outline hover:outline-slate-900 dark:bg-slate-800 dark:hover:outline-slate-100 dark:hover:bg-slate-600 dark:text-slate-50">

    <div class="relative group">
      <a href="/v/<%= collection.entity.id %>/<%= collection.id %>">
        <img alt="<%= collection.entity.title %> thumbnail" class="block w-full h-auto" src="<%= collection.entity.thumbnail %>" />
      </a>
      <div class="absolute top-0 left-0 z-10 flex-row hidden gap-1 px-1 bg-slate-50 group-hover:flex rounded-br-md">
        <time datetime="<%= collection.entity.createdAt %>" alt="Created at <%= collection.entity.createdAt %>" title="Created at <%= collection.entity.createdAt %>">
          <i class="fa fa-calendar-o"></i>
        </time>
        <% if (collection.entity.updatedAt !== collection.entity.createdAt) { %>
        <time datetime="<%= collection.entity.updatedAt %>" alt="Updated at <%= collection.entity.updatedAt %>" title="Updated at <%= collection.entity.updatedAt %>">
          <i class="fa fa-calendar"></i>
        </time>
        <% } %>
      </div>
      <% if (collection.entity.duration) { %>
      <time datetime="PT<%= secondsToPTDuration(collection.entity.duration) %>" class="absolute z-10 font-mono bottom-0 right-0 bg-[rgba(0,0,0,0.85)] rounded-md rounded-br-none border text-white border-slate-400 px-1" alt="<%= secondsToHuman(collection.entity.duration) %>" title="<%= secondsToHuman(collection.entity.duration) %>"><%= secondsToHMS(collection.entity.duration) %></time>
      <% } %>
    </div>

    <header class="flex items-center justify-between p-2 leading-tight">
      <h1 class="w-full text-lg ">
        <div class="relative flex group">
          <a href="/v/<%= collection.entity.id %>/<%= collection.id %>" class="inline-block w-full underline truncate underline-offset-2 hover:underline-offset-1">
            <% if (!collection.public) { %> <i class="fa fa-lock" alt="Private" title="Private"></i> <% } %>
            <%= collection.entity.title %>
          </a>
          <span class="group-hover:inline-block bg-gray-800 px-1 z-20 border border-slate-200 text-sm rounded-md absolute left-1/2 -translate-x-1/2 -translate-y-[calc(100%+4rem)] m-4 mx-auto text-center w-full hidden">
            <%= collection.entity.title %>
          </span>
        </div>
      </h1>
    </header>

    <footer class="flex items-center justify-between p-2 leading-none underline underline-offset-2 hover:underline-offset-1">
      <a href="/profile/<%= collection.author.username %>" class="w-1/6">
        <img alt="" class="block rounded-full" src="<%= collection.author.avatarURL %>">
      </a>

      <a href="/v/<%= collection.entity.id %>/<%= collection.id %>" class="relative inline-flex items-center p-3 text-sm font-medium text-center">
        <%= collection.title %>
        <div class="absolute inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white border-2 rounded-full border-slate-200 dark:border-slate-800 bg-amber-700 -top-1 -right-1">
          <%= collection.markerCount %>
        </div>
      </a>

    </footer>
  </article>
</div>