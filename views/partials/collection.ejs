<div class="w-full px-1 my-1 md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3 xl:w-1/4">

  <article class="overflow-hidden rounded-lg shadow-lg bg-slate-200">

    <div class="relative">
      <a href="/v/<%= collection.entity.id %>/<%= collection.id %>">
        <img alt="<%= collection.entity.title %> thumbnail" class="block w-full h-auto" src="<%= collection.entity.thumbnail %>" />
      </a>
      <% if (collection.entity.duration) { %>
      <div class="absolute z-10 font-mono text-white bottom-0 right-0 bg-[rgba(0,0,0,0.85)] rounded-md rounded-br-none border border-slate-400 px-1" alt="Duration" title="Duration"><%= secondsToHMS(collection.entity.duration) %></div>
      <% } %>
    </div>

    <header class="flex items-center justify-between p-2 leading-tight">
      <h1 class="w-full text-lg ">
        <div class="relative flex group">
          <a href="/v/<%= collection.entity.id %>/<%= collection.id %>" class="inline-block w-full text-black underline truncate underline-offset-2 hover:underline-offset-1">
            <% if (!collection.public) { %> <i class="fa fa-lock" alt="Private" title="Private"></i> <% } %>
            <%= collection.entity.title %>
          </a>
          <span class="group-hover:inline-block bg-gray-800 px-1 z-20 border border-slate-200 text-sm text-gray-100 rounded-md absolute left-1/2 -translate-x-1/2 -translate-y-[calc(100%+4rem)] m-4 mx-auto text-center w-full hidden">
            <%= collection.entity.title %>
          </span>
        </div>
      </h1>
    </header>

    <footer class="flex items-center justify-between p-2 leading-none text-black underline underline-offset-2 hover:underline-offset-1">
      <a href="/profile/<%= collection.author.username %>" class="w-1/6">
        <img alt="" class="block rounded-full" src="<%= collection.author.avatarURL %>">
      </a>

      <a href="/v/<%= collection.entity.id %>/<%= collection.id %>" class="relative inline-flex items-center p-3 text-sm font-medium text-cente">
        <%= collection.title %>
        <div class="absolute inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white border-2 border-white rounded-full bg-amber-700 -top-1 -right-1">
          <%= collection.markerCount %>
        </div>
      </a>

    </footer>
  </article>
</div>