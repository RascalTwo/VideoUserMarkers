<%- await include("../partials/header.ejs") %>
<h1 class="pt-3 text-xl text-center"><a class="underline underline-offset-2 hover:underline-offset-1" href="/v/<%= collection.entity.id %>"><%= collection.entity.title %></a></h1>
<h2 class="pt-3 text-xl text-center">
  <% if (!collection.public) { %> <i class="fa fa-lock" alt="Private" title="Private"></i> <% } %>
  <%= collection.title %>
  by
  <a class="underline underline-offset-2 hover:underline-offset-1" href="/profile/<%= collection.author.username %>">
    <%= collection.author.username %>
  </a>
</h2>
<% if (collection.description) { %>
<p><%= collection.description %></p>
<% } %>

<div id="root" class="px-4"></div>

<script src="https://player.twitch.tv/js/embed/v1.js"></script>
<script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
<script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
<script src="/collection/render.js" type="module" data-user="<%= JSON.stringify(user) %>" data-collection="<%= JSON.stringify(collection) %>"></script>

<%- await include("../partials/footer.ejs") %>