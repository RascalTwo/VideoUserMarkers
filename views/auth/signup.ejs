<%- await include("../partials/header.ejs") %>
	<form class="flex flex-col bg-white rounded shadow-lg p-6 mt-6" method="POST">
		<label class="font-semibold text-xs" for="username">Username</label>
		<input class="flex items-center h-12 px-4 w-48 md:w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="text" name="username" id="username">
		<label class="font-semibold text-xs mt-3" for="password">Password</label>
		<input class="flex items-center h-12 px-4 w-48 md:w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="password" name="password" id="password">
		<button class="flex items-center justify-center h-12 px-6 w-48 md:w-64 bg-blue-600 mt-8 rounded font-semibold text-sm text-blue-100 hover:bg-blue-700" type="submit">Sign Up</button>
		<div class="flex justify-center text-xs gap-2">
			<a class="text-blue-400 hover:text-blue-500" href="/auth/login">Log In</a>
		</div>
	</form>
<%- await include("../partials/footer.ejs") %>