<%- await include("../partials/header.ejs") %>
<form class="flex flex-col p-6 mt-6 bg-white rounded shadow-lg" method="POST">
  <label class="text-xs font-semibold" for="username">Username</label>
  <input class="flex items-center h-12 px-4 min-w-[12rem] md:min-w-[16rem] bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="text" name="username" id="username" value="<%= query.username %>" autofocus>
  <label class="mt-3 text-xs font-semibold" for="password">Password</label>
  <input class="flex items-center h-12 px-4 min-w-[12rem] md:min-w-[16rem] bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="password" name="password" id="password" value="<%= query.password %>">
  <button class="flex items-center justify-center h-12 px-6 min-w-[12rem] md:min-w-[16rem] bg-blue-600 mt-8 rounded font-semibold text-sm text-blue-100 hover:bg-blue-700" type="submit">Sign Up</button>
  <div class="flex justify-center gap-2 mt-3 text-xs">
    <a class="text-blue-400 hover:text-blue-500" href="/auth/login">Log In</a>
  </div>
</form>
<%- await include("../partials/footer.ejs") %>