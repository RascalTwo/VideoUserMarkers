{
	"settings": {
		"react": {
			"version": "18"
		}
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"ignorePatterns": ["*.js"],
	"globals": {
		"React": "readonly",
		"ReactDOM": "readonly",
		"Twitch": "readonly",
		"YT": "readonly"
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"react/prop-types": "off"
	}
}
