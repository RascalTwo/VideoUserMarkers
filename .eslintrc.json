{
	"settings": {
		"react": {
			"version": "16.14.0"
		}
	},
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["plugin:react/recommended", "eslint:recommended"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react"],
	"rules": {
		"indent": "off",
		"no-unused-vars": [
			"warn",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"caughtErrorsIgnorePattern": "^_"
			}
		],
		"linebreak-style": ["error", "unix"],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"semi": ["error", "always"],
		"arrow-parens": ["error", "as-needed"],
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
		"react/prop-types": "off",
		"sort-imports": [
			"error",
			{
				"ignoreDeclarationSort": true
			}
		]
	}
}
