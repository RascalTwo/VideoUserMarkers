{
	"name": "video-user-markers-backend",
	"version": "0.25.2",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "concurrently 'npm run build:watch' 'npm run start:watch'",
		"start": "node index.js",
		"start:watch": "nodemon --ignore ./public --ignore ./views index.js",
		"build": "npm run build:react && npm run build:tailwind",
		"build:react": "babel public/collection/*.jsx --out-dir public/collection",
		"build:tailwind": "postcss index.css -o public/index.css",
		"build:watch": "concurrently 'npm run build:react -- --watch' 'npm run build:tailwind -- --watch'",
		"lint": "prettier . --write && eslint . --ext .js,.jsx --fix && js-beautify views/**/*.ejs --type=html --indent-size=2 -r"
	},
	"pre-commit": [
		"lint"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.0",
		"concurrently": "^7.4.0",
		"connect-mongo": "^4.6.0",
		"cors": "^2.8.5",
		"dompurify": "^2.4.3",
		"dotenv": "^16.0.2",
		"ejs": "^3.1.8",
		"express": "^4.18.1",
		"express-flash": "^0.0.2",
		"express-promise-router": "^4.1.1",
		"express-session": "^1.17.3",
		"jsdom": "^21.0.0",
		"marked": "^4.2.5",
		"method-override": "^3.0.0",
		"mongoose": "^6.6.0",
		"morgan": "^1.10.0",
		"node-fetch": "^3.3.0",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"passport-twitch-new": "^0.0.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.19.3",
		"@babel/preset-env": "^7.19.3",
		"@babel/preset-react": "^7.18.6",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.14",
		"eslint": "^8.28.0",
		"eslint-plugin-react": "^7.31.11",
		"js-beautify": "^1.14.7",
		"nodemon": "^2.0.20",
		"postcss": "^8.4.21",
		"postcss-cli": "^10.1.0",
		"pre-commit": "^1.2.2",
		"prettier": "^2.8.1",
		"tailwindcss": "^3.2.4"
	}
}
